<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:c="http://www.springframework.org/schema/c"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">
	
	<bean id="family" class="ex41.di.xml.Family" c:papaName="홍아빠" c:mamiName="홍엄마" p:sisterName="홍누나">
		<property name="brotherName" value="홍오빠"></property>
	</bean>	
	
	<bean id="student3" class="ex41.di.xml.Student" c:name="홍길자" c:age="20" p:height="170" p:weight="80">
		<constructor-arg>
			<list>
				<value>분노</value>
				<value>파괴</value>
			</list>
		</constructor-arg>
	</bean>
		
	
</beans>
